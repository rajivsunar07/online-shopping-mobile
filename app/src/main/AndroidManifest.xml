<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.RajivSunar.e_commercewebsite">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcommerceWebsite"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.product.ProductDetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.product.CreateProductActivity"
            android:exported="true" />
        <activity
            android:name=".ui.product.MyProductsActivity"
            android:exported="true" />
        <activity
            android:name=".ui.order.CheckoutActivity"
            android:exported="true" />
        <activity
            android:name=".ui.order.CartActivity"
            android:label="@string/title_activity_cart" />
        <activity android:name=".ui.user.LoginActivity" />
        <activity android:name=".ui.DashboardActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.user.SignupActivity" />
        <activity android:name=".ui.product.ProductActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>